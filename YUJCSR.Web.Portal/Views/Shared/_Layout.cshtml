<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - YUJCSR.Web.Portal</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/YUJCSR.Web.Portal.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-toggleable-md navbar-light bg-white header-navbar">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img
                        src="/Assets/images/logo.svg" alt="logo" /></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-lg-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 justify-content-center">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="AboutUs">About us</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Project" asp-action="Index">Project</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="" asp-action="">Impact</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="" asp-action="">CSO</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="" asp-action="">Companies</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="ContactUs">Contact us</a>
                        </li>
                    </ul>

                    <div class="action-container">
                        <a class="btn btn-outline-primary" data-toggle="modal" data-target="#login">Login</a>
                        <a class="btn btn-primary" data-toggle="modal" data-target="#register">Register</a>
                    </div>

                    <!-- Modal -->
                    <div class="modal fade" id="login" tabindex="-1" role="dialog" aria-labelledby="loginTitle" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered" role="document">
                            <div class="modal-content">
                                <div class="modal-body">
                                    <h3>Login as</h3>

                                    <div class="d-flex">
                                        <div class="form-check pl-0">
                                            <input class="form-check-input ml-0" type="radio" name="flexRadioDefault" id="company" onclick="redirectToWebsite('https://example.com')">
                                            <label class="form-check-label pl-4" for="company">
                                                company
                                            </label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input ml-0" type="radio" name="flexRadioDefault" id="cso" onclick="redirectToWebsite('https://example1.com')">
                                            <label class="form-check-label pl-4" for="cso">
                                                CSO
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="modal fade" id="register" tabindex="-1" role="dialog" aria-labelledby="registerTitle" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered" role="document">
                            <div class="modal-content">
                                <div class="modal-body">
                                    <h3>Register as</h3>

                                    <div class="d-flex">
                                        <div class="form-check pl-0">
                                            <input class="form-check-input ml-0" type="radio" name="flexRadioDefault" id="company" onclick="redirectToWebsite('https://example.com')">
                                            <label class="form-check-label pl-4" for="company">
                                                company
                                            </label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input ml-0" type="radio" name="flexRadioDefault" id="cso" onclick="redirectToWebsite('https://example1.com')">
                                            <label class="form-check-label pl-4" for="cso">
                                                CSO
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer class="footer">
        <div class="border-top container links-section">
            <div class="row gy-md-5 g-sm-3">
                <div class="col-12 col-md-6 col-sm-6 order-md-1 order-sm-1 col-lg-3">
                    <img src="/Assets/images/logo.svg" class="logo" alt="logo" />
                </div>
                <div class="col-12 col-md-6 col-sm-6 order-md-3 order-sm-3 col-lg-3">
                    <div class="links">
                        <a asp-area="" asp-controller="" asp-action="">Home</a>
                        <a asp-area="" asp-controller="" asp-action="">About Us</a>
                        <a asp-area="" asp-controller="" asp-action="">Projects</a>
                        <a asp-area="" asp-controller="" asp-action="">How we work</a>
                    </div>

                    <div class="links d-none d-xs-block">
                        <a asp-area="" asp-controller="" asp-action="">Our team</a>
                        <a asp-area="" asp-controller="" asp-action="">Impact</a>
                        <a asp-area="" asp-controller="" asp-action="">CSO</a>
                        <a asp-area="" asp-controller="" asp-action="">Companies</a>
                    </div>

                    <div class="details d-xs-none">
                        <p> <span>Registered Address:</span>
                            B-29, Sainath Park Society,
                            Opp. Kalyan Party Plot, Vasna,
                            Vadodara - 390015</p>
                    </div>
                </div>
                <div class="col-12 col-md-6 col-sm-6 order-md-4 order-sm-4 col-lg-3">
                    <div class="links d-xs-none">
                        <a asp-area="" asp-controller="" asp-action="">Our team</a>
                        <a asp-area="" asp-controller="" asp-action="">Impact</a>
                        <a asp-area="" asp-controller="" asp-action="">CSO</a>
                        <a asp-area="" asp-controller="" asp-action="">Companies</a>
                    </div>

                    <div class="details d-none d-xs-block">
                        <p> <span>Registered Address:</span>
                            <br> B-29, Sainath Park Society,<br>
                            Opp. Kalyan Party Plot, Vasna,<br>
                            Vadodara - 390015</p>
                    </div>

                    <div class="details">
                        <p><span>Email: </span> yujcsr@gmail.com</p>
                        <p><span>Tel: </span> 91 7990515758</p>
                    </div>
                </div>
                <div class="col-12 col-md-6 order-md-2 order-sm-2 col-sm-6 col-lg-3 order-lg-4">
                    <div class="connect-with-us">
                        <p>Connect with us</p>

                        <div class="social-wrapper">
                            <img src="/Assets/icons/linkedin.svg" alt="linkedin" />
                            <img src="/Assets/icons/fb.svg" alt="facebook" />
                            <img src="/Assets/icons/instagram.svg" alt="instagram" />
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="border-top container copyright-section">
            <div class="copyright-left">
                <a asp-area="" asp-controller="" asp-action="">Terms & Conditions</a>
                <a asp-area="" asp-controller="" asp-action="">Privacy Policy</a>
                <a asp-area="" asp-controller="" asp-action="">Cookie policy</a>
            </div>
            <div class="copyright-right">
                Copyright &copy; 2023 YUJCSR
            </div>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        function redirectToWebsite(url) {
            window.location.href = url;
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
